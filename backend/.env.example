# Database
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/database_name

# Application
SECRET_KEY=your-secret-key-here-change-in-production
CSRF_SECRET_KEY=  # Optional: separate CSRF key, defaults to SECRET_KEY
ENCRYPTION_KEY=  # Optional: field encryption key (Fernet), defaults to SECRET_KEY
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@example.com
SENDGRID_FROM_NAME=Your App Name
SENDGRID_SANDBOX_MODE=false

# PowerDNS
POWERDNS_API_URL=https://your-powerdns-server.com/api/v1/pdnsadmin/
POWERDNS_USERNAME=admin
POWERDNS_PASSWORD=your-password-here

# VPN Server Configuration
VPN_SERVER_PUBLIC_KEY=your-wireguard-public-key-here
VPN_SERVER_ENDPOINT=your-vpn-server-ip:port
VPN_DNS_SERVERS=10.20.200.1
VPN_ALLOWED_IPS=10.0.0.0/8,fd00:a::/32

# Keycloak Integration (optional - for SSO credential sync)
# Set PASSWORD_SYNC_ENABLED=true only after Keycloak is fully stood up and reachable.
# The sync job will skip entries (without consuming retries) if Keycloak is unreachable.
KEYCLOAK_URL=                          # e.g. https://auth.cyberxredteam.org
KEYCLOAK_REALM=cyberx
KEYCLOAK_ADMIN_CLIENT_ID=admin-cli     # Service account client ID with user-management permissions
KEYCLOAK_ADMIN_CLIENT_SECRET=          # Client secret from Keycloak admin console
KEYCLOAK_WEBHOOK_SECRET=               # HMAC secret for verifying inbound Keycloak webhooks (future use)
PASSWORD_SYNC_ENABLED=false            # Master toggle — keep false until Keycloak is ready
PASSWORD_SYNC_INTERVAL_MINUTES=5       # How often the background job runs
PASSWORD_SYNC_MAX_RETRIES=5            # Max API-error retries per user before giving up

# Discord Integration (optional - for per-event invite links)
DISCORD_BOT_TOKEN=                     # Bot token from Discord Developer Portal
DISCORD_INVITE_ENABLED=false           # Master toggle — requires bot token and channel ID on the event

# Session Configuration
SESSION_EXPIRY_HOURS=24

# Email Job Configuration
BULK_EMAIL_INTERVAL_MINUTES=45

# Frontend and Reminder Configuration
FRONTEND_URL=http://localhost:8000
REMINDER_1_DAYS_AFTER_INVITE=7
REMINDER_1_MIN_DAYS_BEFORE_EVENT=14
REMINDER_2_DAYS_AFTER_INVITE=14
REMINDER_2_MIN_DAYS_BEFORE_EVENT=7
REMINDER_3_DAYS_BEFORE_EVENT=3
REMINDER_CHECK_INTERVAL_HOURS=24
